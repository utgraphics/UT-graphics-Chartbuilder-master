{
  "name": "chartbuilder",
  "version": "2.3.0",
  "description": "Easily create beautiful charts",
  "main": "src/js/index.js",
  "scripts": {
    "test:jsx": "browserify -t rewireify test/jsx/index-jsx.js | tap-closer | smokestack | tap-spec",
    "test:js": "browserify test/index.js | tap-closer | smokestack | tap-spec",
    "test": "npm run test:js && npm run test:jsx",
    "docs": "./node_modules/.bin/documentation --github --format html -o api-docs",
    "test-page": "gulp test-page",
    "dev": "gulp",
    "build": "gulp build",
    "gh-pages": "npm run build && npm run docs && mv api-docs build && gulp gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Quartz/Chartbuilder"
  },
  "browser": {
    "d4": "./node_modules/d4/d4.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "reactify"
    ]
  },
  "browserify-shim": {
    "d4": {
      "exports": "d4",
      "depends": [
        "d3:d3"
      ]
    }
  },
  "author": "Quartz",
  "contributors": [
    {
      "name": "Nikhil Sonnad",
      "email": "nikhil@nsnnd.com"
    },
    {
      "name": "David Yanofsky",
      "email": "david@yanofsky.info"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "chartbuilder-ui": "^1.2.0",
    "classnames": "^2.2.1",
    "d3": "^3.5.5",
    "d4": "git://github.com/yanofsky/d4.git",
    "flux": "~2.1.1",
    "lodash": "^4.0.0",
    "markdown": "^0.5.0",
    "react": "^0.14.5",
    "react-addons-shallow-compare": "^0.14.5",
    "react-addons-update": "^0.14.5",
    "react-addons-pure-render-mixin": "^0.14.5",
    "react-dom": "^0.14.5",
    "save-svg-as-png": "^1.0.2",
    "sugar-date": "^1.5.1"
  },
  "devDependencies": {
    "browser-sync": "2.x.x",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.0",
    "del": "2.2.0",
    "documentation": "^3.0.4",
    "envify": "^3.2.0",
    "faker": "^2.1.2",
    "gulp": "^3.6.2",
    "gulp-changed": "^1.3.0",
    "gulp-css-base64": "^1.3.1",
    "gulp-gh-pages": "^0.5.4",
    "gulp-stylus": "^2.0.1",
    "gulp-uglify": "^1.1.0",
    "nib": "^1.0.2",
    "nomnom": "^1.8.0",
    "react-addons-test-utils": "^0.14.5",
    "reactify": "^1.1.1",
    "rewireify": "^0.2.5",
    "smokestack": "^3.4.1",
    "tap-closer": "^1.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
